{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PaletheaLauncher",
  "version": "0.2.8-3",
  "identifier": "com.palethea.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Palethea Launcher",
        "width": 1100,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/PaletheaLauncher/**",
          "$HOME/Library/Application Support/PaletheaLauncher/**",
          "$HOME/.palethealauncher/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "appimage",
      "msi",
      "nsis",
      "dmg"
    ],
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/mwsk75996/palethea-launcher/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJCNENGMjAwNTE4NDk2NjAKUldSZ2xvUlJBUEpNS3lBVDl6aWlndFpFb29ZQU0wdEpCL1BSRlBiQzJVRVJTZHRWQUcxMm9rd24K"
    },
    "shell": {
      "open": true
    }
  }
}