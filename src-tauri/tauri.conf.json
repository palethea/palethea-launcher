{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PaletheaLauncher",
  "version": "0.6.3",
  "identifier": "com.palethea.launcher",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://127.0.0.1:5173",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Palethea Launcher",
        "width": 1100,
        "height": 700,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 1100,
        "minHeight": 700,
        "decorations": false,
        "shadow": true,
        "transparent": true,
        "backgroundColor": "#00000000",
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https: http: data:; connect-src 'self' https: asset: http://asset.localhost; frame-src 'self' https://www.youtube.com https://youtube.com https://www.youtube-nocookie.com https://youtube-nocookie.com https://player.vimeo.com; media-src 'self' asset: https: data: blob:; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-inline' 'unsafe-eval';",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**",
          "$HOME/**",
          "$HOME/.palethealauncher/**",
          "C:/**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "rpm",
      "appimage",
      "msi",
      "nsis",
      "dmg"
    ],
    "icon": [
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/instance_logos/*"
    ],
    "createUpdaterArtifacts": true,
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/mwsk75996/palethea-launcher/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDJCNENGMjAwNTE4NDk2NjAKUldSZ2xvUlJBUEpNS3lBVDl6aWlndFpFb29ZQU0wdEpCL1BSRlBiQzJVRVJTZHRWQUcxMm9rd24K"
    },
    "shell": {
      "open": true
    }
  }
}
