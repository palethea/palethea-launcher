{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:allow-spawn",
    "shell:allow-execute",
    "shell:allow-open",
    "fs:default",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "http:default",
    "dialog:default",
    "updater:default",
    "process:allow-restart",
    "process:allow-exit",
    "opener:default",
    {
      "identifier": "opener:allow-open-path",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$HOME/.palethealauncher/**"
        },
        {
          "path": "$HOME/Library/Application Support/PaletheaLauncher/**"
        }
      ]
    },
    {
      "identifier": "opener:allow-reveal-item-in-dir",
      "allow": [
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$HOME/.palethealauncher/**"
        },
        {
          "path": "$HOME/Library/Application Support/PaletheaLauncher/**"
        }
      ]
    }
  ]
}